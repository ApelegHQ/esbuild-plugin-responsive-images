{
	"compilerOptions": {
		"target": "es6",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist",
		"strict": true,
		"strictNullChecks": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"skipLibCheck": false,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": false,
		"lib": ["es6", "ES2019.object", "dom"],
		"declaration": true
	},
	"ts-node": {
		"experimentalResolver": true,
	},
	"include": ["src/**/*", "test/**/*"],
	"exclude": [
		"node_modules",
		"build"
	]
}
